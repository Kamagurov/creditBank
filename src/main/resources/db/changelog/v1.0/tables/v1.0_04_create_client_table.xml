<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <property name="uuid_function" value="gen_random_uuid()" dbms="postgresql"/>

    <changeSet id="3.0" author="SKamagurov">
        <sql>
            DROP TABLE IF EXISTS client CASCADE;
        </sql>
        <createTable tableName="client">
            <column name="client_id" type="uuid" valueComputed="${uuid_function}">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="last_name" type="varchar(255)">
            </column>
            <column name="first_name" type="varchar(255)">
            </column>
            <column name="middle_name" type="varchar(255)">
            </column>
            <column name="birth_date" type="timestamp(6)">
            </column>
            <column name="email" type="varchar(255)">
            </column>
            <column name="dependent_amount" type="int">
            </column>
            <column name="gender" type="varchar(50)"/>
            <column name="marital_status" type="varchar(50)"/>
            <column name="passport" type="jsonb">
            </column>
            <column name="employment" type="jsonb"/>
            <column name="account_number" type="varchar(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>