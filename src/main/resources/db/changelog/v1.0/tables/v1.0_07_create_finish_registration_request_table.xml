<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="3.4" author="SKamagurov">
        <sql>
            DROP TABLE IF EXISTS finish_registration_request_entity CASCADE;
        </sql>
        <createTable tableName="finish_registration_request_entity">
            <column name="id" type="int">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="credit_id" type="uuid"/>
            <column name="gender" type="varchar(50)"/>
            <column name="marital_status" type="varchar(50)"/>
            <column name="dependent_amount" type="int"/>
            <column name="passport_issue_date" type="timestamp"/>
            <column name="employment" type="jsonb"/>
            <column name="account_number" type="varchar(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>