<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <property name="uuid_function" value="gen_random_uuid()" dbms="postgresql"/>

    <changeSet id="3.2" author="SKamagurov">
        <sql>
            DROP TABLE IF EXISTS statement CASCADE;
        </sql>
        <createTable tableName="statement">
            <column name="statement_id" type="uuid" valueComputed="${uuid_function}">
            <constraints primaryKey="true" unique="true"/>
        </column>
        <column name="client_id" type="uuid">
        </column>
        <column name="credit_id" type="uuid">
        </column>
        <column name="status" type="varchar(255)"/>
        <column name="creation_date" type="timestamp"/>
        <column name="applied_offer" type="jsonb"/>
        <column name="sign_date" type="timestamp"/>
        <column name="ses_code" type="integer"/>
        <column name="status_history" type="jsonb"/>
    </createTable>

    <addForeignKeyConstraint
            baseTableName="statement"
            baseColumnNames="client_id"
            constraintName="fk_statement_client"
            referencedTableName="client"
            referencedColumnNames="client_id"/>

    <addForeignKeyConstraint
            baseTableName="statement"
            baseColumnNames="credit_id"
            constraintName="fk_statement_credit"
            referencedTableName="credit"
            referencedColumnNames="credit_id"/>

    <rollback>
        <dropTable tableName="statement"/>
        <dropForeignKeyConstraint baseTableName="statement" constraintName="fk_client_passport"/>
        <dropForeignKeyConstraint baseTableName="statement" constraintName="fk_client_employment"/>
    </rollback>
</changeSet>
        </databaseChangeLog>