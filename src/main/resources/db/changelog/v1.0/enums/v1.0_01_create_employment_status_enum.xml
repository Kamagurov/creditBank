<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1.4" author="SKamagurov">
        <sql>
            DROP TABLE IF EXISTS employment_status CASCADE;
        </sql>
        <createTable tableName="employment_status">
            <column name="status" type="varchar(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
        <insert tableName="employment_status">
            <column name="status" value="UNEMPLOYED"/>
        </insert>
        <insert tableName="employment_status">
            <column name="status" value="SELF_EMPLOYED"/>
        </insert>
        <insert tableName="employment_status">
            <column name="status" value="EMPLOYED"/>
        </insert>
        <insert tableName="employment_status">
            <column name="status" value="BUSINESS_OWNER"/>
        </insert>
    </changeSet>
</databaseChangeLog>