<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1.6" author="SKamagurov">
        <sql>
            DROP TABLE IF EXISTS marital_status CASCADE;
        </sql>
        <createTable tableName="marital_status">
            <column name="marital_status" type="varchar(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
        <insert tableName="marital_status">
            <column name="marital_status" value="MARRIED"/>
        </insert>
        <insert tableName="marital_status">
            <column name="marital_status" value="DIVORCED"/>
        </insert>
        <insert tableName="marital_status">
            <column name="marital_status" value="SINGLE"/>
        </insert>
        <insert tableName="marital_status">
            <column name="marital_status" value="WIDOW_WIDOWER"/>
        </insert>
    </changeSet>
</databaseChangeLog>